<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rv_sleep"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/img_news"
        android:layout_width="134dp"
        android:layout_height="101dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_date_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="52dp"
        android:text="12 December 2023"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/img_news" />

    <TextView
        android:id="@+id/tv_title_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:ems="13"
        android:maxLines="3"
        android:text="Insomnia Bukan karena Stres tetapi Kebiasaan Tidur?"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_date_news"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_news"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_desc_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:ems="17"
        android:maxLines="3"
        android:textStyle="italic"
        android:text="Saat kamu mengalami insomnia, tubuh mungkin menjadi kesulitan tidur, tidur sulit untuk nyenyak, dan mungkin keduanya. Ternyata, seseorang mengalami insomnia di malam hari bukan hanya disebabkan oleh kebiasaan tidur. "
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@+id/img_news"
        app:layout_constraintTop_toBottomOf="@+id/tv_date_news" />


</androidx.constraintlayout.widget.ConstraintLayout>
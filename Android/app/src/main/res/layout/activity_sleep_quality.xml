<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.quality.SleepQualityActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/quality_head"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/semibold"
            android:textSize="14sp"
            android:text="@string/tv_duration"
            android:textColor="@color/black"
        />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_duration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/tv_work"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_work"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_work"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/tv_sleep_duration"
/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_sleep_duration"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_sleep_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/tv_height" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_height"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:fontFamily="@font/semibold"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="@string/tv_weight"
/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/il_weight"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_start_end"
            android:layout_marginEnd="@dimen/margin_start_end">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/checkButton"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/btn_blue"
            android:text="Check"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="@+id/il_weight"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/il_weight"
            app:layout_constraintTop_toBottomOf="@+id/il_weight" />

    </LinearLayout>


</ScrollView>
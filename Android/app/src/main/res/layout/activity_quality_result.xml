<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.quality.result.QualityResultActivity">
    <ImageView
        android:id="@+id/img_quality_result"
        android:layout_width="241dp"
        android:layout_height="241dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/title_quality_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Sleep Disorder Status"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_quality_result"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/img_quality_result"
        app:layout_constraintTop_toBottomOf="@+id/img_quality_result" />

    <TextView
        android:id="@+id/message_quality_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="14sp"
        android:text="Selamat Pola Tidurmu Cukup Baik,"
        app:layout_constraintEnd_toEndOf="@+id/img_quality_result"
        app:layout_constraintStart_toStartOf="@+id/img_quality_result"
        app:layout_constraintTop_toBottomOf="@+id/title_quality_result" />

    <TextView
        android:id="@+id/suggest_quality_result"
        android:layout_width="333dp"
        android:layout_height="244dp"
        android:layout_marginTop="72dp"
        android:textSize="13sp"
        android:textAlignment="center"
        android:text="Keren, coba pertahankan kualitas tidurmu dengan saran berikut yuk!\n - Pastikan untuk menetapkan jadwal tidur yang konsisten, termasuk waktu bangun dan tidur, guna"
        app:layout_constraintEnd_toEndOf="@+id/img_quality_result"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/img_quality_result"
        app:layout_constraintTop_toBottomOf="@+id/message_quality_result" />

    <Button
        android:id="@+id/close_btn"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/x_letter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/img_quality_result"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>